    dest='dl_train_n_gpus')

parser___train_ppp.add_argument(
    '--cpu-merge',
    action='store_true',
    default=False,
    required=False,
    help='Deep Learning training: CPU Merge flag',
    dest='dl_train_cpu_merge')

parser___train_ppp.add_argument(
    '--keras',
    action='store_true',
    default=None,
    required=False,
    help='whether to use Keras',
    dest='dl_train_keras')


# EVAL PPP
