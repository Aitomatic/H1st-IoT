container_commands:
  000_migrate:
    command: "python manage.py migrate"
    leader_only: true

  001_collect_static:
    command: "python manage.py collectstatic --clear --no-input"
    leader_only: true

  002_wsgi_pass_authorization_on:
    command: 'echo "WSGIPassAuthorization On" >> ../wsgi.conf'

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: arimo.IoT.DataAdmin._django_root.settings

  aws:elasticbeanstalk:container:python:
    WSGIPath: arimo/IoT/DataAdmin/_django_root/wsgi.py

  aws:elasticbeanstalk:container:python:staticfiles:
    /static/: arimo/IoT/DataAdmin/_static_files/

packages:
  yum:
    postgresql96-devel: []
